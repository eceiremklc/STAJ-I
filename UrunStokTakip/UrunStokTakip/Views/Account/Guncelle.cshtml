@model UrunStokTakip.Models.Kullanicilar
@{
    ViewBag.Title = "Guncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="container">
                    <br />
                    <div class="form-group">
                        <label>Ad</label>
                        <input type="text" name="ad" value="@Model.ad" class="form-contol" />
                    </div>
                    <div class="form-group">
                        <label>Soyad</label>
                        <input type="text" name="soyad" value="@Model.soyad" class="form-contol" />
                    </div>
                    <div class="form-group">
                        <label>Kullanıcı Adı</label>
                        <input type="text" name="kullanici_adi" value="@Model.kullanici_adi" class="form-contol" />
                    </div>
                    <div class="form-group">
                        <label>Mail</label>
                        <input type="text" name="mail" value="@Model.mail" class="form-contol" />
                    </div>
                    <div class="form-group">
                        <label>Şifre</label>
                        <input type="text" name="sifre" value="@Model.sifre" class="form-contol" />
                    </div>
                    <div class="form-group">
                        <label>Şifre Tekrar</label>
                        <input type="text" name="sifre_tekrar" value="@Model.sifre_tekrar" class="form-contol" />
                    </div>
                    <button type="submit" class="btn btn-primary">Güncelle</button>
                </div>
            </div>
        </div>
    </div>
</form>