@model UrunStokTakip.Models.Kategori
@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using(Html.BeginForm("Ekle", "Kategori", FormMethod.Post))
 {
    <br />
    <br />
    <div class="container">
        <br />
        <div class="row">
            <div class="col-md-4">
                <tr>
                    <td><label>Kategori Adı</label></td>
                    <td>@Html.TextBoxFor(x => x.kategori_adi, new { @class = "form-control" })</td>
                </tr>
                <br />
                <tr>
                    <td><label>Kategori Açıklama</label></td>
                    <td>@Html.TextBoxFor(x => x.kategori_aciklama, new { @class = "form-control" })</td>
                </tr>
                <br />
                <button type="submit" class="btn btn-default">Ekle</button>

            </div>
        </div>
    </div>
 }

